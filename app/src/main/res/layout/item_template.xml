<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="16dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp"
    android:layout_marginBottom="10dp"
    android:paddingBottom="4dp"
    android:backgroundTint="@color/white">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:id="@+id/layoutUtama">

        <TextView
            android:id="@+id/namaItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="Nama"
            android:padding="6dp"
            android:textColor="@color/black"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/hargaItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rp9999999"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:maxLines="1"
            android:layout_below="@id/namaItem"/>
        <View
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/txtJumlah"
            android:layout_marginLeft="10dp"
            android:background="@color/ash_grey"/>

        <ImageButton
            android:id="@+id/buttonSubstract"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/txtJumlah"
            android:background="@drawable/ic_baseline_remove_24" />
        <TextView
            android:id="@+id/txtJumlah"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_toLeftOf="@id/buttonAdd"
            android:layout_centerVertical="true"
            android:text="0"
            android:textAlignment="center"
            android:textSize="25sp"
            android:textColor="@color/black"/>
        <View
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:background="@color/ash_grey"/>
        <ImageButton
            android:id="@+id/buttonAdd"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/ic_baseline_add_24"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>