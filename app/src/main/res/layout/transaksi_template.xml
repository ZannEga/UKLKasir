<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="16dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:paddingBottom="4dp"
    android:backgroundTint="@color/white"
    android:id="@+id/relative">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/namaPelangganList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Nama"
            android:textColor="@color/black"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/tglList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/namaPelangganList"
            android:layout_marginStart="10dp"
            android:text="00:00 15-05-2023"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/statusList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="10dp"
            android:text="Belum Dibayar"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/mejaList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/statusList"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="10dp"
            android:text="Meja 13"
            android:textColor="@color/black" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>